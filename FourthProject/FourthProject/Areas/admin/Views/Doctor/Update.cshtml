@model DoctorCreateDto
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Title</label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="input-group-text"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoctorPhoto" class="control-label"></label>
        <input class="form-control" asp-for="DoctorPhoto" type="file">
        <span asp-validation-for="DoctorPhoto" class="text-danger"></span>
    </div>
    <select class="form-select" asp-for="DepartmentId" asp-items="new SelectList(ViewBag.department ,nameof(Department.Id),nameof(Department.Name))">
        <option selected>Choose Department</option>

    </select>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

